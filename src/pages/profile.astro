---
import '$lib/styles/app.css';
import MainLayout from '../layouts/MainLayout.astro';
import { Button } from '../lib/components/ui/button';
---

<MainLayout title="Profile">
  <h1 class="text-3xl font-bold mb-6">Your Profile</h1>
  <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
    <div class="flex items-center space-x-6 mb-4">
      <img
        class="h-24 w-24 rounded-full"
        src="https://via.placeholder.com/96"
        alt="Profile picture"
      />
      <div>
        <h2 class="text-2xl font-bold dark:text-white">Jane Doe</h2>
        <p class="text-gray-600 dark:text-gray-300">Creative Designer</p>
      </div>
    </div>
    <div class="mb-4">
      <h3 class="text-xl font-semibold mb-2 dark:text-white">Bio</h3>
      <p class="dark:text-gray-300">
        Passionate about creating beautiful and inspiring mood boards. Always looking for new
        creative ideas and color combinations.
      </p>
    </div>
    <Button client:load>Edit Profile</Button>
  </div>
</MainLayout>
